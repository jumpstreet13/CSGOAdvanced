<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_marginBottom="15dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_in_map_list"
        android:background="@drawable/translate_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="2dp"
        android:clickable="true"
        android:padding="8dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_in_card_map_list"
            android:layout_width="wrap_content"
            android:src="@drawable/de_cache"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/MapNames"
            android:id="@+id/textview_in_card_map_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="De dust2"/>

        </FrameLayout>

    </android.support.v7.widget.CardView>

    </FrameLayout>
</LinearLayout>