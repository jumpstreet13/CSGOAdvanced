<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_marginTop="@dimen/margin_bottom_between_cards">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_in_map_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="2dp"
        android:clickable="true"
        android:padding="@dimen/padding_between_cards">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageview_in_card_map_list"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />

        <TextView
            style="@style/MapNames"
            android:id="@+id/textview_in_card_map_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="De dust2"/>
        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>