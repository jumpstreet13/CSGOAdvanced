<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_in_gallery_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:clickable="true"
    android:layout_marginLeft="@dimen/margin_sides_between_cards"
    android:layout_marginRight="8dp"
    android:padding="@dimen/padding_between_cards">

    <ImageView
        android:id="@+id/imageview_in_card_gallery_list"
        android:transitionName="fromDetailToBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</android.support.v7.widget.CardView>
